// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  COMPLETED
  INPROGRESS
  PENDING
}

model Todo {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  expires     Int
  isCompleted Boolean
  status      Status
}

model Resources {
  userId     String
  cdnBucket  String 
  resourceId String @id
}
